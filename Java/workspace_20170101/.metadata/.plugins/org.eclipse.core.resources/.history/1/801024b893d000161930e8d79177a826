package jan2;

import java.util.Scanner;

public class evecount_back {
   public static void main(String[] args) {
	int i; //열번 일하는지 확인할 수 있는 변수
	int number;//값 입력받는 변수
	int count; //짝수 갯수 세는 변수
	
	Scanner sc = new Scanner(System.in);
	
	count = 0;
	for(i=1; i<=10; i++)
	{
		System.out.println("정수 %d",i);
		number = sc.nextInt();
		if( number % 2 == 0)
			count++;
	}
	System.out.println("짝수의 개수 : " +count);
 }
}
