package jan4;
/*
 * static : 원칙적으로 클래스안의 모든 함수나 변수는 
 * 객체를 생성하지 않으면 사용불가하나 
 * 예외적으로 static를 붙이면, 객체를 안만들어도 
 * 사용이 가능하다
 * static 이 붙은 애들은 붙은 것 끼리만 호출가능.
 */
public class Function_1 {

	
	static //함수선언
	void displayStar()
	{
		System.out.println("**************************************");
	}
	
	static void displayStar(int starCnt)
	{
		/*
		 * int starCnt : 파라미터, 인수, 매개변수라는 말로 부른다 여기에 선언된
		 * 변수를 통해 함수 외부에서 값을 전달할 수 있다
		 * 함수 호출 방법은 displayStar(10); 이런식으로 호출한다.
		 */
		for(int i=1; i<starCnt; i++)
		{
			System.out.print("*");
		}
		System.out.println();
		
	}
	
	public static void main(String[] args) {
		//함수 호출하기
		displayStar();
		displayStar();
		displayStar();
		displayStar();
		displayStar();
		displayStar();
		for(int i=1; i<=5; i++)
		{
			displayStar();
		}
		displayStar(10);
		displayStar(50);
		displayStar(5);
		
		for(int i=1; i<=10; i++)
		{
			displayStar(i);
		}
	}

}
