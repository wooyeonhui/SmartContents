package bascketball;

import java.util.Random;
import java.util.Scanner;
 
public class GameSet {
	
    Scanner sc = new Scanner(System.in);
    
	private final int MAX = 3; //랜덤수 뽑기 
	private int[] setRan = new int[MAX];
	private int []User = new int[MAX];
	
	//랜덤 수 뽑기0~9
    public void start()
	{
		Random rand = new Random();
		for(int i = 0; i < MAX; i++)
		{	setRan[i] = rand.nextInt(10);

		}
	}	
	
  //사용자 숫자 입력하기
    public void UserSet(){
	  User = new int[3]; //사용자 입력 숫자
	  for(int i=0; i<3; i++)
	  {
		  System.out.println(i+"번째 숫자 입력 : ");
		  User[i] = sc.nextInt();
		  }
	  }
    
    //일치 확인 
    int countout =0;
    int countstrike =0;
    int countball=0;
   public boolean isExist(int key)
    {
    	for(int i=0; i<MAX; i++)
    	{
    		if( setRan[i] == User[i])//순서와 숫자가 맞을때
    		{
    			System.out.println("스트라잌흐!");
    			countstrike++;
    		}else if( setRan == User )//숫자만 맞을때 (?!)
    		{
    			System.out.println("볼");
    			countball++;
    		}else
    		{
    			System.out.println("아웃");
    			countout++;
    		}
    		System.out.println(countstrike+"스트라이크  ,"+countball+"볼  ,"+countout+"아웃");
    		 if(countstrike == 3)//
        	 {
        		return true;
        	 }	    
    	}
    	
		return false;
    }

  

}
